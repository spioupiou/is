<div class="container">
    <h4>My Bookings:</h4>
      <div class="row">
        <% @bookings.each do |booking| %>
          <div class="col-4 bg-white p-4 m-2">
            <% kondo = Kondo.find(booking.kondo_id) %>
            <p>Provider: <%= User.find(kondo.user_id).first_name %></p>
            <p>Booked Date: <%= booking.booked_date %></p>
            <p>Status: <%= booking.status %></p>
          </div>
        <% end %>
      </div>
  </div>