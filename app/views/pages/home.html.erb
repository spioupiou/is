<div class="card-category d-flex flex-column justify-content-center align-items-center" 
style="height: 100vh; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path "https://res.cloudinary.com/djlvhfuba/image/upload/v1643110748/development/interior_ncfcmy.png", crop: :fill %>')">
  <h1 id="banner-text">Make Your <span style="color:#FF773D">Home</span> a Better Place</h1>
  <%= render "components/searchBar" %>
</div>
<div class="container">
  <h2>Interior Specialists near you</h2>
    <div class="row justify-content-center">
      <% @kondos.each do |kondo| %>
        <div class="col-xl-3 col-md-6 col-sm-12 d-flex justify-content-center">
          <%= render "components/card", 
            name:  kondo.user.first_name,
            price: kondo.price,
            summary: kondo.summary.split(" ").first(10).join(" "),
            kondo: kondo.name,
            prefecture: kondo.prefecture,
            path: kondo_path(kondo)
          %> 
        </div>
      <% end %>
    </div>
  </div>