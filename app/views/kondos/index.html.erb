<!-- Delete h1 later !-->
<div class="container">
  <% if user_signed_in? && current_user.provider? %>
    <h2> My Kondos <small>(<%= @kondos.count %>)</small></h2>
    <%= link_to "Add new Kondo", new_kondo_path, class: "btn btn-warning"  %>
    <div class="row">
    <% @kondos.each do |kondo| %>
      <div class="col-xl-3 col-md-6 col-sm-12 d-flex justify-content-center">
        <%= render "components/cardProvider",
          book: kondo.bookings.count,
          price: kondo.price,
          summary: kondo.summary.split(" ").first(10).join(" "),
          kondo: kondo.name,
          prefecture: kondo.prefecture,
          path: kondo_path(kondo)
        %>
        </div>
      <% end %>

      <!-- Map for providers -->
      <div id="map"
            style="width: 100%; height: 600px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>

  <% else  %>
    <h2> Find your kondos</h2> <!-- For renters and unauthenticated users -->
      <div class="row">
        <% @kondos.each do |kondo| %>
          <div class="col-xl-3 col-md-6 col-sm-12 d-flex justify-content-center">
            <%= render "components/cardRenter",
              photo: kondo.user.user_photo,
              name:  kondo.user.first_name,
              price: kondo.price,
              summary: kondo.summary.split(" ").first(10).join(" "),
              kondo: kondo.name,
              prefecture: kondo.prefecture,
              path: kondo_path(kondo)
            %>
            </div>
        <% end %>
      </div>
  <% end %>
</div>
