<div class="container">
  <div class="row justify-content-around">
    <div class="col-lg-6 col-sm-12 p-5 m-2" style="background: white;">
      <div class="row text-center">
        <div class="col-lg-4 col-sm-4">
          <%= cl_image_tag @kondo.user.user_photo, width: "75%",crop: :fill %>
        </div>
        <div class="col-lg-6 col-sm-6 align-self-center">
          <h3><%= @kondo.user.first_name %> <%= @kondo.user.last_name %></h3>
          <h5><%= @kondo.name %></h5>
        </div>
      </div>
      <div class="row">
        <div class="col-12 py-5">
          <h4>About <%= @kondo.user.first_name %></h4>
          <p><%= @kondo.details %></p>
        </div>
      </div>
    </div>
    <%#Only renters can see this  %>
    <% if user_signed_in? && current_user.renter? %>
     <div class="col-4 p-5 m-2" style="background: white;">
       <%# Book form here%>
      <%= link_to "Book now", new_kondo_booking_path(@kondo.id), class:"btn btn-primary"%>
    <% end %>
     </div>
   <%#----------------------------%>
  </div>
</div>

<%# Only provider sees this %>
<% if user_signed_in? && current_user.provider? %>
  <div class="container">
    <h4>People currently booked this kondo</h4>
      <div class="row">
        <% @kondo.bookings.each do |booking| %>
          <div class="col-4">
            <p>Renter: <%= User.find(booking.user_id).first_name %></p>
            <p>Status: <%= booking.status %></p>
            <%= link_to "edit status", edit_kondo_booking_path(@kondo, booking)%>
            <p>Booked Date: <%= booking.booked_date %></p>
          </div>
        <% end %>
      </div>
  </div>
<% end %>
