<div class="container">
  <h1> Profile Page </h1>
  <div class="row justify-content-center my-3" style="background: white;">
    <div class="col-8 text-center">

    <%= cl_image_tag @user.user_photo, style: "width: 200px; height: 200px; object-fit: cover; border-radius: 50%;"%>
    <h2><%= @user.first_name%> <%= @user.last_name %></h2>


    <!--- TESTING -->

    <p>Job Title: <%= @profile.job_title %></p>
    <p> About Me: <%= @profile.about_me %></p>
    <p> Years of Experience: <%= @profile.years_of_exp %></p>
    <p> My location is: <%= @user.prefecture %></p>
    </div>
  </div>
</div>
