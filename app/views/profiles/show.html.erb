<div class="container">
  <h1> Profile Page </h1>
  <div class="row justify-content-center py-3" style="background: white;">
    <div class="col-10 text-center p-3">
      <%= cl_image_tag @user.user_photo, style: "width: 200px; height: 200px; object-fit: cover; border-radius: 50%; margin-bottom:16px"%>
      <h2><%= @user.first_name%> <%= @user.last_name %></h2>

      <!--- TESTING -->
      <h4 class="profile-title">Job Title</h4>
      <p><%= @profile.job_title %></p>
      <h4 class="profile-title">About Me</h4>
      <p><%= @profile.about_me %></p>
      <h4 class="profile-title">Years of Experience</h4>
      <p><%= @profile.years_of_exp %></p>
      <h4 class="profile-title">Region</h4>
      <p><%= @user.prefecture %></p>

    <% design_pics = [
      "design1.jpg",
      "design2.jpg",
      "design3.jpg",
      "design4.jpg",
      "design5.jpg"
    ] %>
    </div>

    <div class="col-10 text-center my-3">
    <div class="splide">
      <div class="splide__track">
        <ul class="splide__list">
        <% design_pics.each do |pic|%>
          <li class="splide__slide resize"><%= image_tag pic, style: "width: 400px; height: 300px; object-fit: cover;" %></li>
        <% end %>
        </ul>
      </div>
    </div>
<!-- REVIEWS -->
    <div class="row justify-content-center">
      <div class="col-10 text-center">
        <h2>Reviews</h2>
        <% @reviews.each do |review| %>
          <div class="row justify-content-center">
            <div class="col-10 text-center">
              <h4><%= review.booking.kondo.name %></h4>
              <p><%= review.comment%></p>
              <p><%= "⭐" * review.rating %> </p>
              <p> - <%= review.user.first_name %> <%= review.user.last_name %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
